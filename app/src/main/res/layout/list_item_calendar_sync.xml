<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_margin="5dp"
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/calendar_sync_name"
            tools:text="Calendar day 2025-01-27"
            android:textSize="24sp"
            android:layout_margin="2.5dp"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/calendar_sync_button"/>

    <TextView
            android:id="@+id/calendar_sync_file_last_modification"
            tools:text="File last modification: 16m ago"
            android:textSize="12sp"
            android:layout_margin="2.5dp"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/calendar_sync_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/calendar_sync_button"/>

    <TextView
            android:id="@+id/calendar_sync_cloud_last_modification"
            tools:text="Cloud last modification: 45m ago"
            android:textSize="12sp"
            android:layout_margin="2.5dp"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/calendar_sync_file_last_modification"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/calendar_sync_button"/>

    <Button
            android:id="@+id/calendar_sync_button"
            tools:text="Upload"
            android:layout_margin="2.5dp"

            android:layout_width="wrap_content"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
