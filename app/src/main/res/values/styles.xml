<resources>
    <style name="App.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/fgColor</item>
        <item name="android:textColorSecondary">@color/fgColor</item>
    </style>

    <style name="App.FloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/fgColor</item>
        <item name="backgroundTint">@color/widgetColor</item>

        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:layout_marginBottom">@dimen/fab_fg_margin</item>
        <item name="android:layout_marginTop">@dimen/fab_fg_margin</item>
        <item name="android:layout_marginLeft">@dimen/fab_fg_margin</item>
        <item name="android:layout_marginRight">@dimen/fab_fg_margin</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="App.Text.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
    </style>
</resources>
